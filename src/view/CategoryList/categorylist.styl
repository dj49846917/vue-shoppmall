#menu
    background: aliceblue
    ul
        li
            line-height: 2rem
            border-bottom: 1px solid #e4e7ed
            padding: 3px
            font-size: .8rem
            text-align: center
        .categoryActive
            background: #fff

#category-list
    overflow: scroll
    .list-item
        display: flex
        flex-direction: row
        font-size:0.8rem
        border-bottom: 1px solid #f0f0f0
        background-color: #fff
        padding:5px
        .list-item-img
            flex:8
        .list-item-text
            flex:16
            margin-top:10px
            margin-left:10px
    


    